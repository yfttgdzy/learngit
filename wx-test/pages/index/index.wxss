/**index.wxss**/
.img-box{
  display: flex;
  flex-direction: row;
  align-items: flex-start;
  padding: 10px;
}
.img-list,.choose-image{
  position: relative;
  margin: 0 5px;
  width: 150rpx;
  height: 150rpx;
}
.img-list image{
  width: 100%;
  height: 100%;
}
.img-list button.close{
  position: absolute;
  top: -7px;
  right: -7px;
  z-index: 10;
  padding: 0;
  background-color: transparent;
  width: 28rpx;
  height: 28rpx;
  font-size: 0;
  border-radius: 0;
}
.img-list button.close::after{
  content: none;
}